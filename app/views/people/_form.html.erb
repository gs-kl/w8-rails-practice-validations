<% if @person.errors.any? %>
  <p><%= pluralize(@person.errors.count, "error") %> prevented this record from being saved:</p>
  <ul>
    <% @person.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @person, html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :first_name, class: "control-label col-sm-2" %>
    <div class="col-sm-4">
      <% if @person.errors[:first_name].empty? %>
        <%= f.text_field :first_name, class: "form-control" %>
      <% else %>
        <%= f.text_field :first_name, class: "form-control error" %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, class: "control-label col-sm-2" %>
    <div class="col-sm-4">
      <% if @person.errors[:last_name].empty? %>
        <%= f.text_field :last_name, class: "form-control" %>
      <% else %>
        <%= f.text_field :last_name, class: "form-control error" %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date_of_birth, class: "control-label col-sm-2" %>
    <div class="col-sm-4">
      <% if @person.errors[:date_of_birth].empty? %>
        <%= f.date_field :date_of_birth, class: "form-control" %>
      <% else %>
        <%= f.date_field :date_of_birth, class: "form-control error" %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "cancel", people_path, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
